{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2022"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@types/*": [
                "src/types/*"
            ],
            "@risk/*": [
                "src/risk/*"
            ],
            "@data/*": [
                "src/data/*"
            ],
            "@features/*": [
                "src/features/*"
            ],
            "@strategy/*": [
                "src/strategy/*"
            ],
            "@ai/*": [
                "src/ai/*"
            ],
            "@portfolio/*": [
                "src/portfolio/*"
            ],
            "@execution/*": [
                "src/execution/*"
            ],
            "@news/*": [
                "src/news/*"
            ],
            "@analysis/*": [
                "src/analysis/*"
            ],
            "@logging/*": [
                "src/logging/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}