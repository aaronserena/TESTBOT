{
  "name": "bitcoin-scalper",
  "version": "1.0.0",
  "description": "Production-grade Bitcoin scalping bot with AI-driven decision making",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:paper": "NODE_ENV=paper node dist/index.js",
    "start:live": "NODE_ENV=live node dist/index.js",
    "test": "vitest",
    "test:unit": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "ws": "^8.16.0",
    "ccxt": "^4.2.0",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "inversify": "^6.0.2",
    "reflect-metadata": "^0.2.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "uuid": "^9.0.1",
    "decimal.js": "^10.4.3",
    "date-fns": "^3.3.1",
    "axios": "^1.6.7",
    "events": "^3.3.0",
    "better-sqlite3": "^9.4.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/ws": "^8.5.10",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.8",
    "@types/better-sqlite3": "^7.6.9",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vitest": "^1.2.2",
    "@vitest/coverage-v8": "^1.2.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
